<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Vagas.Paginas.CadastrarVaga">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Entry x:Name="NomeVaga" Placeholder="Vaga" />
                <Entry x:Name="Empresa" Placeholder="Empresa" />
                    <Entry x:Name="Quantidade" Placeholder="Quantidade" Keyboard="Numeric" MaxLength="3"/>
                <Entry x:Name="Cidade" Placeholder="Cidade" />
                    <Entry x:Name="Salario" Placeholder="Salário" Keyboard="Numeric" />
                <Label Text="Descrição do Cargo" />
                <Editor x:Name="Descricao" HeightRequest="200" />
                <StackLayout Orientation="Horizontal" >
                    <Label Text="Tipo de Contratação" />
                    <Label Text="CLT" />
                    <Switch x:Name="TipoContratacao"/>
                    <Label Text="PJ" />
                </StackLayout>
                    <Entry x:Name="Telefone" Placeholder="Telefone" Keyboard="Numeric" MaxLength="9"/>
                    <Entry x:Name="Email" Placeholder="Email" Keyboard="Email"/>
            
                <Button Text="Salvar" Clicked="SalvarAction"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>